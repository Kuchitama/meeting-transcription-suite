# Environment Variables for Meeting Transcription Suite
# Copy this file to .env and replace the example values with your actual API keys

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# Claude API Key (Anthropic)
# Get your key from: https://console.anthropic.com/
# Format: sk-ant-api03-...
CLAUDE_API_KEY=sk-ant-api03-your-claude-api-key-here

# OpenAI API Key
# Get your key from: https://platform.openai.com/api-keys
# Format: sk-...
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# Transcription Settings (Optional)
# =============================================================================

# Default Whisper model size
# Options: tiny, base, small, medium, large, large-v2, large-v3
DEFAULT_WHISPER_MODEL=medium

# Default cleanup style
# Options: business, casual, academic
DEFAULT_CLEANUP_STYLE=business

# Default chunk duration for long audio files (seconds)
DEFAULT_CHUNK_DURATION=600

# =============================================================================
# Audio Processing Settings (Optional)
# =============================================================================

# Silence threshold for dynamic chunking (dB)
SILENCE_THRESHOLD=-40

# Minimum silence duration for splitting (seconds)
MIN_SILENCE_DURATION=2.0

# =============================================================================
# Performance Settings (Optional)
# =============================================================================

# Enable GPU acceleration if available
USE_GPU=true

# Maximum number of parallel workers
MAX_WORKERS=4

# Enable speculative decoding by default
USE_SPECULATIVE_DECODING=true

# =============================================================================
# Output Settings (Optional)
# =============================================================================

# Default output directory for transcriptions
OUTPUT_DIR=./transcriptions

# Include timestamps in output
INCLUDE_TIMESTAMPS=true

# Save intermediate files for debugging
SAVE_INTERMEDIATE_FILES=false

# =============================================================================
# Security Settings
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable API request logging (for debugging only - may log sensitive data)
LOG_API_REQUESTS=false